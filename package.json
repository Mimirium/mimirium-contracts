{
    "name": "mimirium-contracts",
    "version": "0.1.1",
    "description": "Smart Contracts for the Mimirium Network using the Ethereum Blockchain",
    "main": "index.js",
    "files": [
        "build",
        "contracts",
        "test"
    ],
    "homepage": "https://mimirium.io",
    "scripts": {
        "compile": "npx truffle compile",
        "migrate:dev": "npx truffle migrate --network development",
        "test": "npx truffle compile && npx truffle test",
        "lint:sol": "solium -d .",
        "lint:sol:fix": "solium -d . --fix",
        "lint": "npm run lint:sol",
        "lint:fix": "npm run lint:sol:fix",
        "console": "npx truffle console",
        "coverage": "npx solidity-coverage",
        "ganache": "npx ganache-cli -m 'drop will peasant siege wisdom entry trial fly target minute emotion entry'",
        "testrpc": "npx testrpc-sc --gasLimit 0xfffffffffff --port 8555"
    },
    "repository": {
        "type": "git",
        "url": "https://mimirium@dev.azure.com/mimirium/mimirium-network/_git/mimirium-contracts"
    },
    "keywords": [
        "mimirium",
        "blockchain",
        "ethereum",
        "solidity"
    ],
    "author": "Mimirium <info@mimirium.io>",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^5.12.0",
        "ganache-cli": "^6.2.5",
        "openzeppelin-solidity": "^2.1.1",
        "solidity-coverage": "^0.5.1",
        "solium": "^1.2.1",
        "truffle": "^5.0.1"
    }
}
